-extends "corporate/public_base.haml"
-set title = "Sign Up"

-block content
  #signup: .container
    .row
      .span8
        %form#signup-form.form-horizontal(action=".", method="POST")
          %fieldset
            %legend Register

            -if form.errors
              %ul.errors
                -for field_name, field_errors in form.errors|dictsort if field_errors
                  -for error in field_errors
                    %li {{ form[field_name].label }}: {{ error }}

            .control-group
              %label.control-label(for="first_name")
                First Name
              .controls
                %input#first_name(name="first_name", type="text")

            .control-group
              %label.control-label(for="last_name")
                Last Name
              .controls
                %input#last_name(name="last_name", type="text")

            .control-group
              %label.control-label(for="email")
                Email Address
              .controls
                %input#email(name="email", type="text")

            .control-group
              %label.control-label(for="tel_number")
                Contact Number
              .controls
                %input#tel_number(name="tel_number", type="text")

            .control-group
              %label.control-label(for="password")
                Password
              .controls
                %input#password(name="password", type="password")

            .control-group
              %label.control-label(for="password_confirmation")
                Password Confirmation
              .controls
                %input#password_confirmation(name="password_confirmation", \
                                             type="password")

            %button.btn.btn-large.btn-primary(type="submit", data-spinner="Signing in...") Signup

      .span4
        -include "components/corporate/commentary.haml"
